<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.teambravo.pipergames.view.PlayerTabController">
   <children>
      <HBox fillHeight="false" prefHeight="15.0" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Button fx:id="playersInTeamsButton" mnemonicParsing="false" onAction="#handleAllPlayersInTeamsButtonAction" text="Spelare i lag" />
            <Button fx:id="allPlayersButton" mnemonicParsing="false" onAction="#handleAllPlayersButtonAction" text="Alla Spelare" />
         </children>
      </HBox>
      <HBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="teamTable" prefWidth="90.0" HBox.hgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="teamNameCol" minWidth="75.0" prefWidth="90.0" resizable="false" text="Lagnamn" />
               </columns>
            </TableView>
            <TableView fx:id="playerTable" HBox.hgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="firstNameCol" minWidth="75.0" prefWidth="90.0" text="Förnamn" />
                  <TableColumn fx:id="lastNameCol" minWidth="75.0" prefWidth="90.0" text="Efternamn" />
                  <TableColumn fx:id="nickNameCol" minWidth="75.0" prefWidth="90.0" text="Nickname" />
               </columns>
            </TableView>
            <VBox spacing="10.0">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <VBox>
                           <children>
                              <Label text="Förnamn" />
                              <TextField fx:id="firstNameText" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Efternamn" />
                              <TextField fx:id="lastNameText" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Nickname" />
                              <TextField fx:id="nickNameText" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <VBox>
                     <children>
                        <Label text="Gatuadress" />
                        <TextField fx:id="streetAdressText" />
                     </children>
                  </VBox>
                  <HBox spacing="10.0">
                     <children>
                        <VBox>
                           <children>
                              <Label text="Postnummer" />
                              <TextField fx:id="zipText" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Postort" />
                              <TextField fx:id="cityText" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Land" />
                              <TextField fx:id="countryText" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <VBox>
                     <children>
                        <Label text="E-post" />
                        <TextField fx:id="eMailText" />
                     </children>
                  </VBox>
                  <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Spel" />
                              <ComboBox fx:id="gameCmb" onAction="#handleGameSelectedAction" prefWidth="228.0" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Lag" />
                              <ComboBox fx:id="teamCmb" onAction="#handleTeamSelectedAction" prefWidth="228.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <VBox prefHeight="200.0" spacing="10.0">
                     <children>
                        <Button fx:id="addPlayerButton" mnemonicParsing="false" onAction="#HandleAddPlayerButtonAction" prefWidth="60.0" text="Lägg till" />
                        <Button fx:id="savePlayerButton" mnemonicParsing="false" onAction="#HandleSavePlayerButtonAction" prefWidth="60.0" text="Spara" />
                        <Button fx:id="deletePlayerButton" mnemonicParsing="false" onAction="#HandleDeletePlayerButtonAction" prefWidth="60.0" text="Ta bort" />
                     </children>
                     <padding>
                        <Insets top="15.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="BOTTOM_LEFT" prefHeight="200.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#HandleLogoutButtonAction" prefWidth="60.0" text="Logout" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
