<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.teambravo.pipergames.view.PlayerView">
   <children>
      <VBox minWidth="-Infinity" HBox.hgrow="ALWAYS">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox fillHeight="false" prefWidth="200.0" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Button fx:id="playersInTeamsButton" mnemonicParsing="false" onAction="#handleAllPlayersInTeamsButtonAction" text="Spelare i lag" />
                  <Button fx:id="allPlayersButton" mnemonicParsing="false" onAction="#handleAllPlayersButtonAction" text="Alla Spelare" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <TableView fx:id="teamTable" prefWidth="100.0">
                    <columns>
                      <TableColumn fx:id="teamNameCol" minWidth="75.0" prefWidth="-1.0" text="Lagnamn" />
                    </columns>
                  </TableView>
                  <TableView fx:id="playerTable">
                     <columns>
                        <TableColumn fx:id="firstNameCol" minWidth="75.0" prefWidth="-1.0" text="Förnamn" />
                        <TableColumn fx:id="lastNameCol" minWidth="75.0" prefWidth="-1.0" text="Efternamn" />
                        <TableColumn fx:id="nickNameCol" minWidth="75.0" prefWidth="-1.0" text="Nickname" />
                     </columns>
                  </TableView>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox prefWidth="100.0" spacing="10.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Förnamn" />
                  <TextField fx:id="firstNameText" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Efternamn" />
                  <TextField fx:id="lastNameText" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Nickname" />
                  <TextField fx:id="nickNameText" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Gatuadress" />
                  <TextField />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Postnummer" />
                  <TextField />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Postort" />
                  <TextField />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Land" />
                  <TextField />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="eMail" />
                  <TextField />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</HBox>
