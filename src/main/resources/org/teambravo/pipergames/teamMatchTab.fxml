<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.teambravo.pipergames.view.TeamMatchTabController">
    <children>
        <VBox prefHeight="524.0" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <HBox prefHeight="436.0" spacing="10.0">
                    <children>
                        <TableView fx:id="teamMatchTable">
                            <columns>
                                <TableColumn fx:id="teamMatchIdColumn" minWidth="75.0" prefWidth="-1.0" text="MatchID" />
                                <TableColumn fx:id="teamDateCol" minWidth="75.0" prefWidth="-1.0" text="Datum" />
                                <TableColumn fx:id="team1TableColumn" minWidth="75.0" prefWidth="-1.0" text="Team1" />
                                <TableColumn fx:id="team2TableCol" minWidth="75.0" prefWidth="-1.0" text="Team 2" />
                                <TableColumn fx:id="winnerTeamTableCol" minWidth="75.0" prefWidth="-1.0" text="Vinnare" />
                            </columns>
                        </TableView>
                  <VBox prefHeight="377.0" spacing="10.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Label text="Vinnare" />
                              <ComboBox fx:id="winnerCmb" prefWidth="150.0" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                        <VBox prefHeight="377.0" spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Button fx:id="showAllTeamMatches" mnemonicParsing="false" onAction="#handleShowAllTeamMatchesButtonAction" prefWidth="150.0" text="Visa alla Matcher" />
                                <Button fx:id="updateTeamMatchButton" alignment="TOP_CENTER" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleUpdateTeamMatchButton" prefHeight="26.0" prefWidth="150.0" text="Ändra Match" />
                                <Button fx:id="deleteTeamMatch" mnemonicParsing="false" onAction="#handleDeleteTeamMatchButton" prefWidth="150.0" text="Ta bort markerad Match" />
                            </children>
                     <padding>
                        <Insets top="15.0" />
                     </padding>
                        </VBox>
                    </children>
                </HBox>
                <HBox prefHeight="115.0" prefWidth="448.0">
                    <children>
                        <VBox prefHeight="63.0" prefWidth="183.0">
                            <children>
                                <Label prefHeight="24.0" prefWidth="133.0" text="Lägg till Lag 1" />
                                <Label prefHeight="25.0" prefWidth="181.0" text="Lägg till Lag 2" />
                                <Label prefHeight="24.0" prefWidth="153.0" text="Lägg till datum för match:" />
                            </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <ChoiceBox fx:id="team1AddToMatchToCB" prefWidth="150.0" />
                                <ChoiceBox fx:id="team2AddToMatchToCB" prefWidth="150.0" />
                                <TextField fx:id="dateAddTeamMatchText" prefHeight="25.0" prefWidth="108.0" />
                            </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Button fx:id="addTeamMatchButton" alignment="TOP_LEFT" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleAddTeamMatchButton" prefHeight="20.0" prefWidth="119.0" text="Lägg till Match" textAlignment="RIGHT">
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</HBox>
