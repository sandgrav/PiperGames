<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" styleClass="colorBackground" stylesheets="@color.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.teambravo.pipergames.view.Login">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
   </padding>

   <TableView fx:id="userTable" layoutX="14.0" layoutY="10.0" prefHeight="380.0" prefWidth="450.0"
              styleClass="table-view">
      <columns>
         <TableColumn fx:id="idCol" editable="false" resizable="false" styleClass="table-column" text="Id"/>
         <TableColumn id="nickNameCol" fx:id="nickNameCol" editable="false" minWidth="400.0" prefWidth="-1.0"
                      styleClass="table-column" text="Nickname"/>
      </columns>
   </TableView>

   <Button fx:id="loginButton" layoutX="480.0" layoutY="10.0" mnemonicParsing="false"
           onAction="#handleLoginButtonAction" prefHeight="41.0" prefWidth="87.0" styleClass="colorBackground"
           stylesheets="@color.css" text="Login"/>
</AnchorPane>
