      <VBox minWidth="-Infinity" prefHeight="524.0" prefWidth="694.0" HBox.hgrow="ALWAYS">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox prefHeight="436.0" prefWidth="595.0" spacing="10.0">
               <children>
                  <TableView fx:id="matchTable">
                     <columns>
                        <TableColumn fx:id="matchIdColumn" minWidth="75.0" prefWidth="-1.0" text="MatchID" />
                        <TableColumn fx:id="dateCol" minWidth="75.0" prefWidth="-1.0" text="Datum" />
                        <TableColumn fx:id="player1TableColumn" minWidth="75.0" prefWidth="-1.0" text="Spelare 1" />
                        <TableColumn fx:id="player1IdTableCol" minWidth="75.0" prefWidth="-1.0" text="Spelare 1 ID" />
                        <TableColumn fx:id="player2TableCol" minWidth="75.0" prefWidth="-1.0" text="Spelare 2" />
                        <TableColumn fx:id="player2IdTableCol" minWidth="75.0" prefWidth="-1.0" text="Spelare 2 ID" />
                     </columns>
                  </TableView>
                  <VBox prefHeight="377.0" prefWidth="109.0">
                     <children>
                        <Button fx:id="showAllMatches" mnemonicParsing="false" onAction="#handleShowAllMatchesButtonAction" text="Visa alla Matcher" />
