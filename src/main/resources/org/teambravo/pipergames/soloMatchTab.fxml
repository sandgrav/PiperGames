                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox prefHeight="115.0" prefWidth="448.0">
               <children>
                  <VBox prefHeight="63.0" prefWidth="183.0">
                     <children>
                        <Label prefHeight="24.0" prefWidth="133.0" text="Lägg id för Player1:" />
                        <Label prefHeight="25.0" prefWidth="181.0" text="Lägg id för Player 2:" />
                        <Label prefHeight="24.0" prefWidth="153.0" text="Lägg till datum för match:" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ChoiceBox fx:id="player1AddToMatchToCB" prefWidth="150.0" />
                        <ChoiceBox fx:id="player2AddToMatchToCB" prefWidth="150.0" />
                        <TextField fx:id="dateAddSoloMatchText" prefHeight="25.0" prefWidth="108.0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Button fx:id="addMatchButton" alignment="TOP_LEFT" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleAddSoloMatchButton" prefHeight="20.0" prefWidth="119.0" text="Lägg till Match" textAlignment="RIGHT">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
